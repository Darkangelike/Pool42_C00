#include <unistd.h>

void ft_putnbr(int nb);

void	 ft_putchar(char c)
{
	write(1, &c, 1);
}

void	ft_putnbr(int nb)
{
	if (nb == 0)
	{
		ft_putchar(nb + 48);
	}

	if (nb < 10)
	{
		ft_putchar(nb + 48);
	}

	if (nb < 0)
	{
		ft_putchar('-');
		ft_putchar(nb * (-1));
	}

	if (nb >= 10)
	{
		ft_putnbr(nb/10);
		ft_putnbr(nb%10);
	}

}
